            <div class="row form-group py-1 mb-2">
                <div class="col-md-4 col-sm-12 text-md-center">
                    @if (ViewBag.Type != null)
                    {
                        <select class="custom-select" id="select-loai" name="sv_loai" onchange="filter()">
                            <option value="1" selected="selected">@ViewBag.Type</option>
                            <option name="sv_loai" value="luong_cu">Lưỡng cư</option>
                            <option name="sv_loai" value="chim">Chim</option>
                            <option name="sv_loai" value="ca">Cá</option>
