                            <option name="sv_loai" value="ca_map">Cá mập</option>
                            <option name="sv_loai" value="ca_duoi">Cá đuối</option>
                        </select>
                    }
                    else
                    {
                        <select class="custom-select" id="select-loai" name="sv_loai" onchange="filter()">
