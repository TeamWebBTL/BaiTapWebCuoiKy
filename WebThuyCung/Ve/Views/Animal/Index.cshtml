                            <option name="sv_mausac" value="tim">Tím</option>
                            <option name="sv_mausac" value="hong">Hồng</option>
                            <option name="sv_mausac" value="nau">Nâu</option>
                            <option name="sv_mausac" value="den">Đen</option>
                            <option name="sv_mausac" value="xam">Xám</option>
                        </select>
                    }
                    else
                    {
                        <select class="custom-select" id="select-mausac" onchange="filter()">
                            <option value="#" selected="selected">Lọc  theo màu sắc</option>
                            <option name="sv_mausac" value="trang">Trắng</option>
                            <option name="sv_mausac" value="do">Đỏ</option>
                            <option name="sv_mausac" value="cam">Cam</option>
                            <option name="sv_mausac" value="vang">Vàng</option>
                            <option name="sv_mausac" value="xanh_luc">Xanh lục</option>
                            <option name="sv_mausac" value="lam">Xanh lam</option>
                            <option name="sv_mausac" value="tim">Tím</option>
                            <option name="sv_mausac" value="hong">Hồng</option>
                            <option name="sv_mausac" value="nau">Nâu</option>
                            <option name="sv_mausac" value="den">Đen</option>
                            <option name="sv_mausac" value="xam">Xám</option>
                        </select>
                    }
                </div>
                <div class="col-md-4 col-sm-12 text-md-center">
                    @if (ViewBag.Location != null)
                    {
                        <select class="custom-select" id="select-vitri" onchange="filter()">
                            <option value="#" selected="selected">@ViewBag.Location</option>
                            <option name="sv_vitri" value="chau_phi">Châu Phi</option>
                            <option name="sv_vitri" value="chau_a">Châu Á</option>
                            <option name="sv_vitri" value="chau_uc">Châu Úc</option>
                            <option name="sv_vitri" value="chau_au">Châu Âu</option>
                            <option name="sv_vitri" value="bac_my">Bắc Mỹ</option>
                            <option name="sv_vitri" value="nam_my">Nam Mỹ</option>
                            <option name="sv_vitri" value="bac_bang_duong">Bắc Băng Dương</option>
                            <option name="sv_vitri" value="dai_tay_duong">Đại Tây Dương</option>
                            <option name="sv_vitri" value="an_do_duong">Ấn Độ Dương</option>
                            <option name="sv_vitri" value="thai_binh_duong">Thái Bình Dương</option>
                            <option name="sv_vitri" value="nam_dai_duong">Nam Đại Dương</option>
                        </select>
                    }
                    else
                    {
                        <select class="custom-select" id="select-vitri" onchange="filter()">
                            <option value="#" selected="selected">Lọc theo vị trí</option>
                            <option name="sv_vitri" value="chau_phi">Châu Phi</option>
                            <option name="sv_vitri" value="chau_a">Châu Á</option>
                            <option name="sv_vitri" value="chau_uc">Châu Úc</option>
                            <option name="sv_vitri" value="chau_au">Châu Âu</option>
                            <option name="sv_vitri" value="bac_my">Bắc Mỹ</option>
                            <option name="sv_vitri" value="nam_my">Nam Mỹ</option>
                            <option name="sv_vitri" value="bac_bang_duong">Bắc Băng Dương</option>
                            <option name="sv_vitri" value="dai_tay_duong">Đại Tây Dương</option>
                            <option name="sv_vitri" value="an_do_duong">Ấn Độ Dương</option>
                            <option name="sv_vitri" value="thai_binh_duong">Thái Bình Dương</option>
                            <option name="sv_vitri" value="nam_dai_duong">Nam Đại Dương</option>
                        </select>
                    }
                </div>
            </div>
        </div>

        <div class="item">
            <div class="container">
                <div class="row" id="inner-item" >
                    @foreach (Ve.Models.SINHVAT sinhvat in ViewBag.listAnimal)
                    {
                        <div class="col-sm-6 col-md-3 text-sm-center text-xs-center text-md-center mb-2">
                            <div class="card-img-top">
                                <img class="w-100" styte="heigh: 50%;" src="~/public/images/sinh-vat/@sinhvat.Anh" alt="">
                            </div>
                            <div class="my-1">

                                <h5 class="card-title">@sinhvat.Ten</h5>
                                <a href="/Animal/Details/@sinhvat.ID">Chi tiết</a>

                            </div>

                        </div>
                     }

                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript">
        function filter() {
            var x = document.getElementById("select-loai").value;
            var y = document.getElementById("select-mausac").value;
            console.log(y);
            var z = document.getElementById("select-vitri").value;
        
          $.ajax({
              type: "GET",
              url: '@Url.Action("Index","Animal")',
              data: {
                  type: x,
                  color: y,
                  location : z,
              },
              success: function (result) {
                  document.querySelector('html').innerHTML = result;
              }

            })


        }
    </script>
