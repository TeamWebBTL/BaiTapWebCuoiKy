@using Ve.Models;
@model IEnumerable<CHITIETDONHANG>
@{
    ViewBag.Title = "XemDonHang";
    Layout = "~/Views/Shared/BottomPartial.cshtml";

    //WebGrid grid = new WebGrid(source: Model, rowsPerPage: 5);
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Nexus Aquarium|ThanhToan</title>
    <link rel="stylesheet" href="~/public/css/animal.css">
    <link rel="stylesheet" href="~/public/css/style.css">
    <link rel="stylesheet" href="~/public/vendor/bootstrap/bootstrap.css">
    <link rel="stylesheet" href="~/public/vendor/fontawesome/css/all.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <style>
        #info {
            margin: 0px auto;
            margin-bottom: 30px;
            background: #eceeef57;
            height: 450px;
            width: 80%;
            border: 2px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class=" col-sm-2">

            </div>
            <div class=" col-sm-8">
                <div style="color: red; text-align:center;font-size:25px;margin-top:10px">Chi Tiết Đơn Hàng</div>
                <br />
                <table class="table">
                    <thead>
                        <tr>
                            <th style="text-align:center">Tên Vé</th>
                            <th style="text-align:center">      </th>
                            <th style="text-align:center">Số lượng</th>
                            <th style="text-align:center">Đơn giá</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td style="text-align:center">@item.VE.TenVe</td>
                                <td data-th="Product" >
                                    <div class="col-img-prod">
                                        <img src="~/public/images/@item.VE.HinhAnh" alt="Ảnh sản phẩm" class="img-responsive" width="100">
                                    </div>
                                </td>
                                <td style="text-align:center">@item.SoLuong</td>
                                <td style="text-align:center">@item.VE.DonGia</td>
                            </tr>
                        }

                    </tbody>
                </table>
                <br />
                <br />
            </div>
            <div class=" col-sm-2">

            </div>
        </div>
    </div>
</body>
</html>



