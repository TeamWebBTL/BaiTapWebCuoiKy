@model Ve.Models.SUKIEN
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/BottomPartial.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="utf-8">
    <title>Nexus Aquarium|Animals</title>
    <link rel="stylesheet" href="~/public/css/animal.css">
    <link rel="stylesheet" href="~/public/css/style.css">
    <link rel="stylesheet" href="~/public/vendor/bootstrap/bootstrap.css">
    <link rel="stylesheet" href="~/public/vendor/fontawesome/css/all.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {

            $('li.nav-item').removeClass('active');
            $('li.nav-item:eq(2)').addClass('active');

        });
    </script>
</head>

<body>
    <div class="mb-3">
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
                <li data-target="#myCarousel" data-slide-to="3"></li>
                <li data-target="#myCarousel" data-slide-to="4"></li>
                <li data-target="#myCarousel" data-slide-to="5"></li>
                <li data-target="#myCarousel" data-slide-to="6"></li>
                <li data-target="#myCarousel" data-slide-to="7"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/public/images/event-carousel-1.jpg" width="100%" alt="carousel-1">
                </div>
                <div class="carousel-item">
                    <img src="~/public/images/event-carousel-2.jpg" width="100%" alt="carousel-2">
                </div>
                <div class="carousel-item">
                    <img src="~/public/images/event-carousel-3.jpg" width="100%" alt="carousel-3">
                </div>
                <div class="carousel-item">
                    <img src="~/public/images/event-carousel-4.jpg" width="100%" alt="carousel-4">
                </div>
                <div class="carousel-item">
                    <img src="~/public/images/event-carousel-5.jpg" width="100%" alt="carousel-5">
                </div>
                <div class="carousel-item">
                    <img src="~/public/images/event-carousel-6.jpg" width="100%" alt="carousel-6">
                </div>
                <div class="carousel-item">
                    <img src="~/public/images/event-carousel-7.jpg" width="100%" alt="carousel-7">
                </div>
                <div class="carousel-item">
                    <img src="~/public/images/event-carousel-8.jpg" width="100%" alt="carousel-8">
                </div>
            </div>
        </div>
    </div>
    <div class="container" style="margin-bottom: 30px;">
        <div class="row">
            <div class="col-lg-9 left">
                <div class="content">
                    <hr class="gachdau" col-md-1 />
                    <img  width="80%" height="auto" src="~/public/images/@Model.Anh" alt="" />
                    
                    <h2 class="heading" style="margin-top: 20px;">@Model.TieuDe</h2>
                    <p>@Model.MoTa</p>
                </div>
            </div>

            <div class="col-lg-3 right" style="border: 1px solid #d1d0d0; margin-top: 35px;">
                <div>
                    <p style="margin-top: 7px;">Thời gian diễn ra sự kiện:</p><br />
                    <p style="font-weight:bold">Hàng ngày</p>
                    <p> @Model.NgayTao</p>
                    <hr class="gachdau" col-md-1 />
                    <p>Giá sự kiện: 100.000 VNĐ</p><br />
                    <p style="font-weight:bold;">Thành viên</p>
                    <a href="#" style="color: indianred">Liên hệ</a>
                    <p style="font-weight:bold;">Khách</p>
                    <a href="#" style="color: indianred">Liên hệ</a><br />
                    <a class="btn btn-outline-primary" href="/Ticket/Index" style="margin-left: 50px;  margin-top: 30px; padding-left: 40px; padding-right: 40px;">Mua vé</a>
                </div>
                
            </div>
        </div>
    </div>

</body>
</html>


